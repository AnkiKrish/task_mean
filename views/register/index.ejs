<div class="container">
        <div class="col-md-4 col-xs-4 col-sm-4 col-lg-4 col-md-offset-4 col-sm-offset-4 col-xs-offset-4 col-lg-offset-4 ">
            <form action="/register" method="post">
                <div class="form-group">
                    <label> Firstname </label>
                    <input type="text" name="first" placeholder="Firstname" class="form-control"/>
                </div>
                <div class="form-group">
                    <label> Middlename </label>
                    <input type="text" name="middle" placeholder="Middlename" class="form-control"/>
                </div>
                <div class="form-group">
                    <label> Lastname </label>
                    <input type="text" name="last" placeholder="Lastname" class="form-control"/>
                </div>
                <div class="form-group">
                    <label> Mobile </label>
                    <textarea class="form-control" name="mobile"></textarea>
                </div>
                <div class="form-group">
                    <label> Email </label>
                    <input type="text" placeholder="Email" name="email" class="form-control"/>
                </div>
                <div class="form-group">
                    <label> City </label>
                        <select class="form-control" name="city">
                            <option> Select </option>
                            <option> Ahemdabad </option>
                            <option> Pune </option>
                            <option> Hyderabad </option>
                            <option> Mumbai </option>
                            <option> Bengaluru </option>
                        </select>
                </div>
                <div class="form-group">
                    <label> Gender </label> 
                        Male <input type="radio" name="gender" value="male"/>
                        Female <input type="radio" name="gender" value="female"/>
                </div>
                <div class="form-group">
                    <label> Password </label>
                    <input type="password" placeholder="Password" name="password" class="form-control"/>
                </div>
                <div class="form-group">
                    <label> Confirm-password</label>
                    <input type="password" placeholder="Confirm-Password" name="cpassword" class="form-control"/>
                </div>
                <button class="btn btn-success" type="submit"> Register </button>
                <button class="btn btn-success" type="button"> Cancel </button>
            </form>	
            <p> New User Register here </p>
        </div>
    </div>	